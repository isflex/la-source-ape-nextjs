{
  "workbench.colorTheme": "Default Dark+",
  // "workbench.colorTheme": "Default Light Modern",
  "files.exclude": {
    "amplify/.config": true,
    "amplify/**/*-parameters.json": true,
    "amplify/**/amplify.state": true,
    "amplify/**/transform.conf.json": true,
    "amplify/#current-cloud-backend": true,
    "amplify/backend/amplify-meta.json": true,
    "amplify/backend/awscloudformation": false
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/build/*/**": true,
    "**/dist/*/**": true,
  },
  "files.eol": "\n",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.wordWrapColumn": 150,
  "editor.rulers": [
    150
  ],
  "editor.tabSize": 2,
  // "editor.codeActionsOnSaveTimeout": 10000,
  "[html, javascript, json, typescript]": {
    "editor.tabSize": 2
  },
  "[javascript, javascriptreact, typescript, typescriptreact, json, graphql, handlebars]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.codeActionsOnSave": [
      "source.sortPackageJson"
    ]
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      // "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "html.format.wrapLineLength": 150,
  "search.exclude": {
    "**/build/**": true,
		"**/dist/**": true,
		"**/node_modules": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  // "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "prettier.printWidth": 150,
  // "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.enable": false,
  "eslint.format.enable": false,
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  // "eslint.experimental.useFlatConfig": false,
  "eslint.options": {
    // "overrideConfigFile": "/home/ischerer/workspaces/flex/la-source-ape/.eslintrc.cjs"
    // "overrideConfigFile": "/home/ischerer/workspaces/flex/la-source-ape/packages/flex/config/eslint/legacy/dist/.eslintrc.cjs"
    "overrideConfigFile": "/home/ischerer/workspaces/flex/la-source-ape/eslint.config.mjs"
    // "overrideConfigFile": "/home/ischerer/workspaces/flex/la-source-ape/packages/flex/config/eslint/flat-config/dist/eslint.config.mjs"
  },
  "eslint.workingDirectories": [
    {
      "pattern": "./apps/**/src/*",
      "!cwd": true
    },
    {
      "pattern": "./packages/**/src/*",
      "!cwd": true
    },

    // { "directory": "./apps", "!cwd": true },
    // { "directory": "./packages", "!cwd": true },

    // {
    //   "pattern": "./apps/la-source/ape/on-board/client/src/*"
    // },

    // https://github.com/eslint/eslint/discussions/18452
    // {
    //   "mode": "auto"
    // }
  ],
  "eslint.runtime": "/home/ischerer/.nvm/versions/node/v20.19.1/bin/node",
  "eslint.execArgv": ["--max_old_space_size=4096"],
  // "eslint.packageManager": "yarn",
  // "eslint.nodePath": ".yarn/sdks",
  "eslint.ignoreUntitled": true,
  "eslint.lintTask.enable": true,
  // "eslint.alwaysShowStatus": true,
  "eslint.codeActionsOnSave.mode": "problems",
  // Please note that if eslint.codeActionsOnSave.mode is set to problems, the eslint.codeActionsOnSave.rules is ignored.
  // "eslint.codeActionsOnSave.rules": [
  //   "@typescript-eslint/semi",
  //   "@typescript-eslint/indent",
  //   "!@typescript-eslint/*",
  //   "*"
  // ],
  "json.schemaDownload.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
	// "typescript.tsdk": "node_modules\\typescript\\lib",
	"typescript.preferences.quoteStyle": "single",
  // "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // "sass.validate": false,
  "stylelint.snippet": ["css", "scss", "less", "postcss"],
  "stylelint.validate": ["css", "scss", "less", "postcss"],
  "stylelint.configFile": "./packages/flex/design-system-framework/.scss.stylelintrc.json",

  "htmltagwrap.tag": "div",
  "htmltagwrap.autoDeselectClosingTag": true,
}
