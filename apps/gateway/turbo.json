{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "marp:dev": {
      "outputs": [
        "apps/gateway/public/slides/**"
      ],
      "cache": false,
      "env": [
        "DOTENV_*",
        "FLEX_*"
      ]
    },
    "next:dev": {
      "cache": false,
      "env": [
        "FLEX_*"
      ]
    },
    "dev": {
      "dependsOn": [
        "^dev:packages:transit",
        "marp:dev",
        "next:dev"
      ],
      "cache": false
    },
    "marp:build": {
      "outputs": [
        "apps/gateway/public/slides/**"
      ],
      "cache": false,
      "persistent": false,
      "env": [
        "DOTENV_*",
        "FLEX_*"
      ]
    },
    "build": {
      "dependsOn": [
        "//#compile:clean:sh",
        "@flex-design-system/react-ts#build",
        "marp:build"
      ],
      "outputs": [".next/**/*"],
      "cache": true,
      "persistent": false,
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*",
        "GIT_*",
        "NEXT_PUBLIC_*"
      ]
    },
    "start": {
      "cache": false,
      "env": [
        "FLEX_*",
        "NEXT_PUBLIC_*"
      ]
    }
  }
}
