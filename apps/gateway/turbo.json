{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "marp:dev": {
      "outputs": [
        "apps/gateway/public/slides/**"
      ],
      "cache": false,
      "env": [
        "DOTENV_*",
        "FLEX_*"
      ]
    },
    "warm:api": {
      "cache": false,
      "env": [
        "FLEX_*"
      ]
    },
    "next:dev": {
      "cache": false,
      "env": [
        "FLEX_*",
        "NEXT_PUBLIC_*",
        "SENTRY_*"
      ]
    },
    "next:dev:turbo": {
      "cache": false,
      "env": [
        "FLEX_*",
        "NEXT_PUBLIC_*",
        "SENTRY_*"
      ],
      "with": ["marp:dev", "warm:api"]
    },
    "next:tsc": {
      "cache": false,
      "env": [
        "FLEX_*",
        "NEXT_PUBLIC_*",
        "SENTRY_*"
      ]
    },
    "dev": {
      "dependsOn": [
        "^dev:packages:transit",
        "next:dev"
      ],
      "cache": false
    },
    "dev:turbo": {
      "dependsOn": [
        "^dev:packages:transit",
        "next:dev:turbo"
      ],
      "cache": false
    },
    "marp:build": {
      "outputs": [
        "apps/gateway/public/slides/**"
      ],
      "cache": false,
      "persistent": false,
      "env": [
        "DOTENV_*",
        "FLEX_*"
      ]
    },
     "amplify:sandbox:create": {
      "outputs": [
        "apps/gateway/amplify_outputs.json"
      ],
      "inputs": ["$TURBO_DEFAULT$", "apps/gateway/amplify/**/*"],
      "cache": false,
      "persistent": false,
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*"
      ]
    },
     "amplify:sandbox:delete": {
      "cache": false,
      "persistent": false,
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*"
      ]
    },
    "build": {
      "dependsOn": [
        "//#compile:clean:sh",
        "@flex-design-system/react-ts#build",
        "marp:build"
      ],
      "outputs": [".next/**/*"],
      "inputs": ["$TURBO_DEFAULT$", "amplify_outputs.json", "!README.md"],
      "cache": true,
      "persistent": false,
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*",
        "GIT_*",
        "NEXT_PUBLIC_*",
        "SENTRY_*"
      ]
    },
    "start": {
      "cache": false,
      "env": [
        "FLEX_*",
        "NEXT_PUBLIC_*",
        "SENTRY_*"
      ]
    }
  }
}
