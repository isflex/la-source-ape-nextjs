{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "FLEX_MODE",
    "FLEX_PROJ_ROOT",
    "FLEX_DOMAIN_NAME",
    "FLEX_POKER_CLIENT_BUILD_SYS",
    "FLEX_POKER_CLIENT_TARGET",
    "DOTENV_PRIVATE_KEY_DEVELOPMENT",
    "DOTENV_PRIVATE_KEY_PRODUCTION",
    "GIT_COMMIT_SHORT_SHA",
    "NEXT_PUBLIC_BUILD_ID"
  ],
  "tasks": {
    "dev:compile:transit": {
      "dependsOn": [
        "//#compile:watch:sh"
      ]
    },
    "dev:packages:transit": {
      "dependsOn": [
        "^dev:compile:transit",
        "gateway#marp:build"
      ]
    },
    "//#compile:clean:sh": {
      "dependsOn": [
        "@flexiness/domain-utils#compile:tsup"
      ],
      "outputs": [
        "packages/flex/design-system-react-ts/dist/**",
        "packages/flex/domain-store/dist/**",
        "packages/flex/config/eslint/flat-config/dist/**"
      ],
      "cache": true,
      "persistent": false
    },
    "//#compile:watch:sh": {
      "outputs": [
        "packages/flex/domain-store/dist/**",
        "apps/gateway/public/slides/**"
      ],
      "cache": false,
      "persistent": false
    },
    "lint": {
      "dependsOn": [
        "//#compile:clean:sh",
        "^lint"
      ],
      "env": [
        "FLEX_*",
        "GIT_*"
      ],
      "cache": true,
      "persistent": false
    },
    "build:lib": {
      "dependsOn": [
        "//#compile:clean:sh",
        "^build:lib"
      ],
      "env": [
        "FLEX_*",
        "GIT_*"
      ],
      "cache": true,
      "persistent": false
    },
    "build": {
      "dependsOn": [
        "//#compile:clean:sh",
        "^build:lib",
        "^build"
      ],
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*",
        "GIT_*",
        "NEXT_PUBLIC_*"
      ],
      "cache": true,
      "persistent": false
    },
    "start:client:transit": {
      "dependsOn": [
        "@flexiness/domain-content#start"
      ],
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*",
        "GIT_*"
      ],
      "cache": false
    },
    "//#turbo:start:client": {
      "dependsOn": [
        "^start:client:transit"
      ],
      "cache": false
    },
    "//#turbo:start:gateway": {
      "dependsOn": [
        "^start:client:transit",
        "gateway#start"
      ],
      "env": [
        "AWS_*",
        "DOTENV_*",
        "FLEX_*",
        "GIT_*",
        "NEXT_PUBLIC_*"
      ],
      "cache": false
    }
  }
}
